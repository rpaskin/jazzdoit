<h1>Listing users</h1>

<table>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="text-align:right;"><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-info", style: "color: #fff;" %></td>
        <td>&nbsp;</td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger", style: "color: #fff;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-large btn-primary", style: "color: #fff;" %>
