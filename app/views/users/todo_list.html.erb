<div class="row">
  <div class="col-md-10">
    <% unless @user.list_items.blank? %>
      <div class="page-header">
        <h3>TO DO <small><span class="badge"><%= @user.list_items.count %></span></small></h3>
      </div>
      <ul class="list-group to-do-list">
        <%= render @list_items %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>

<% if @user.has_any_done_item? %>
<div class="row">
  <div class="col-md-12"></div>
  <div class="col-md-2">
    <%= button_to "Delete All Done", user_destroy_done_items_path,  class: "btn btn-sm btn-primary pull-right", data: { confirm: 'Are you sure?' }, method: :delete %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="panel panel-default" style="margin-top:1em;">
    <div class="panel-body">
      <%= form_for(@list_item) do |f| %>
        <div class="field">
          <%= f.text_field :description, placeholder: "New todo description", size: 70 %>
        </div>
        <%= f.submit "Post", class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div id="confirmationDialog" class="modal">
 <div class="modal-header">
   <a class="close" data-dismiss="modal">Ã—</a>
   <h3 class="confirm_message">Delete</h3>
 </div>
 <div class="modal-body">
   <p>Are you sure you want to delete?</p>
 </div>
 <div class="modal-footer">
   <a data-dismiss="modal" class="btn">Cancel</a>
   <a data-dismiss="modal" class="btn btn-primary confirm">OK</a>
 </div>
</div>
